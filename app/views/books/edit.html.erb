<% if @book.errors.any? %>
   <h3><%= @book.errors.count %> errors prohibited this book from being saved</h3>
   <p><% @book.errors.full_messages.each do |message| %></p>
   <%= message %>
   <% end %>
<% end %>
<main>
  <div class="container">
   <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
     <h1>Editing Book</h1>
     <%= form_with model: @book, local:true do |f| %>
     <div class="form-group">
       <p>Title</p>
       <%= f.text_field :title %>
     </div>
     <div class="form-group">
       <p>Opinion</p>
       <%= f.text_area :body %>
     </div>
     <div class="form-group">
       <%= f.submit 'Update Book' %>
     </div>
     <%= link_to "Show", book_path(@book.id) %>
     <a>|</a>
     <%= link_to "Back", books_path %>
     <% end %>
   </div>
  </div>
</main>
<footer>
     <div class="container mt-5">
      <div class="row">
       <div class="mx-auto">
        <p>CopyRight KenInoue.inc</p>
       </div>
      </div>
     </div>
</footer>
