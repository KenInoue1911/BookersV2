<% if @book.errors.any? %>
   <h3><%= @book.errors.count %> errors prohibited this book from being saved</h3>
   <p><% @book.errors.full_messages.each do |message| %></p>
   <%= message %>
   <% end %>
<% end %>
<main>
  <div class="container">
   <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
     <h1>Editing Book</h1>
     <%= form_with model: @book, local:true do |f| %>
     <div class="form-group">
       <label for="book_title">Title</label>
        <input class="form-control book_title" type="text" name="book[title]" id="book_title">
     </div>
     <div class="form-group">
       <label for="book_opinion">Opinion</label>
       <textarea class="form-control book_body" name="book[body]" id="book_body"></textarea>
     </div>
     <div class="form-group">
       <input type="submit" name="commit" value="Update Book" class="btn btn-success" data-disable-with="Update Book">
     </div>
     <%= link_to book_path(@book.id) do %>Show
     <a>|</a>
     <a href="/books">Back</a>
     <% end %>
     <% end %>
   </div>
  </div>
</main>
<footer>
     <div class="container mt-5">
      <div class="row">
       <div class="mx-auto">
        <p>CopyRight KenInoue.inc</p>
       </div>
      </div>
     </div>
</footer>
