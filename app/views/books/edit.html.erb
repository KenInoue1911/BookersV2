<h1>Editing Book</h1>
<%= form_with model: @book, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <p><%= f.submit 'Update book' %></p>
  <table>
    <th><%= link_to book_path(@book.id) do %>
    <p>Show</p>
    </th>
    <th>|</th>
    <th><a href="/books">Back</a></th>
  </table>
  <% end %>
<% end %>