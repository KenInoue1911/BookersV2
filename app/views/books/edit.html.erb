<h1>Editing Book</h1>
<% if @book.errors.any? %>
   <h3><%= @book.errors.count %> errors prohibited this book from being saved</h3>
   <p><% @book.errors.full_messages.each do |message| %></p>
   <%= message %>
   <% end %>
<% end %>
<%= form_with model: @book, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title, placeholder:"Enter Title" %>
  <h4>Opinion</h4>
  <%= f.text_area :body, placeholder:"Enter Opinion" %>
  <p><%= f.submit 'Update book' %></p>
  <table>
    <th><%= link_to book_path(@book.id) do %>
    <p>Show</p>
    </th>
    <th>|</th>
    <th><a href="/books">Back</a></th>
  </table>
  <% end %>
<% end %>
