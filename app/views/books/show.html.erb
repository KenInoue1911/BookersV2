<main>
      <%= form_with model: @book, local:true do |f| %>
      <% if @book.errors.any? %>
      <h3><%= @book.errors.count %> errors prohibited this book from being saved</h3>
      <p><% @book.errors.full_messages.each do |message| %></p>
      <%= message %>
      <% end %>
       <% end %>
      <% if flash[:notice] %>
      <p id="notice">
      <%= flash[:notice] %>
      </p>
      <% end %>
 <div class="container px-5 pxsm-0">
   <div class="row">
     <div class="col-md-3">
       <h2>User Info</h2>
       <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
       <table class="table">
         <tbody>
           <tr></tr>
           <tr>
             <th>
               Name  :<%= @user.name %>
             </th>
           </tr>
           <tr>
             <th>
               Introduciton  :<%= @user.introduction %>
             </th>
           </tr>
         </tbody>
       </table>
       <div class="row">
         <%= link_to "", edit_user_path(@user), class:"btn btn-outline-secondary btn-block fas fa-user-cog" %>
       </div>
       <h2 class="mt-3">New book</h2>
       <h4>Title</h4>
       <%= f.text_field :title, placeholder:"Enter Title" %>
       <h4>Opinion</h4>
       <%= f.text_area :body, placeholder:"Enter Opinion" %>
       <%= f.submit 'Create Book' %>
       <% end %>
      </div>
      <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
        <table class="table">
          <tbody>
            <tr>
              <%= form_with model: @book, local:true do |f| %>
              <td><%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></td>
              <td><%= link_to user_path(@user) do %>
              <br><%= @book_find.user.name %><% end %></td>
              <td><br><%= link_to book_path(@book_find) do %><%= @book_find.title %><% end %></td>
              <td><br><%= @book_find.body %></td>
              <% if @book_find.user == current_user %>
              <td><br><%= link_to 'Edit', edit_book_path(@book_find), class:"btn btn-sm btn-success" %></td>
              <td><br><%= link_to "Destroy", book_path(@book_find), class:"btn btn-sm btn-danger", method: :delete, data: { confirm: "Are you sure?" } %></td>
              <% end %>
              <% end %>
            </tr>
          </tbody>
        </table>
      </div>
     </div>
   </div>
 </div>
</main>
<footer>
     <div class="container mt-5">
      <div class="row">
       <div class="mx-auto">
        <p>CopyRight KenInoue.inc</p>
       </div>
      </div>
     </div>
</footer>