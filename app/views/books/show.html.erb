  <body>
  <h1>Book detail</h1>
  <table>
    <thead>
      <tr>
        <th>
          <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
          <%= link_to user_path(@user) do %>
          <br><%= @book_find.user.name %></th>
          <% end %>
        <th><%= @book_find.title %></th>
        <th><%= @book_find.body %></th>
        <% if @book_find.user == current_user %>
        <th><%= link_to "Edit", edit_book_path(@book_find) %></th>
        <th><%= link_to "Delete", book_path(@book_find), method: :delete %></th>
  <% end %>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td></td>
      </tr>
    </tbody>
  </table>
  <h1>User Info</h1>
 <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
  <p>Name:<%= @user.name %></p>
  <p>Introduciton:<%= @user.introduction %></p>
  <% if @user.id == current_user.id %>
  <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
 <% end %>
  <h1>New book</h1>
<%= form_with model: @book, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create book' %>
<% end %>




