  <h1>Book detail</h1>
   <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
   <p><%= @book.title %></p>
  <p><%= @book.body %></p>
  <p><%= @book.user.name %></p>
  <% if @book.user == current_user %>
    <p><%= link_to "Edit", edit_book_path(@book) %></p>
    <%= link_to "Delete", book_path(@book), method: :delete %>
  <% end %>