<%= form_with model: @user, url: user_session_path, local: true do |f| %>
<main>
  <p id="notice"></p>
  <div class="row">
    <div class="mx-auto col-10">
      <h2> Log in</h2>
      <div class="field">
       <%= f.label :name %><br />
       <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder:"Enter Name" %>
      </div>
      <div class="field">
       <%= f.label :password %><br />
       <%= f.password_field :password, autocomplete: "current-password", placeholder:"Enter Password" %>
      </div>
       <% if devise_mapping.rememberable? %>
      <div class="field">
       <%= f.check_box :remember_me %>
       <%= f.label :remember_me %>
      </div>
      <% end %>
     <div class="actions">
     <input type="submit" name="commit" value="Log in" class="btn btn-sm btn-primary" data-disable-with="Log in">
     </div>
     <% end %>
     <%= render "devise/shared/links" %>
    </div>
  </div>
</main>
<footer>
     <div class="container mt-5">
      <div class="row">
       <div class="mx-auto">
        <p>CopyRight KenInoue.inc</p>
       </div>
      </div>
     </div>
   </footer>
