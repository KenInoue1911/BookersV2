
<% if @user.errors.any? %>
   <h3><%= @user.errors.count %> errors prohibited this object from being saved</h3>
   <p><% @user.errors.full_messages.each do |message| %></p>
   <%= message %>
   <% end %>
<% end %>
<main>
 <div class="container">
     <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
         <h2>User Info</h2>
         <%= form_with model:@user, local:true do |f| %>
          <div class="form-group">
             <label for="inputName">Name</label> 
             <input class="form-control name" type="text" name="user[name]" id="inputName">
          </div>
          <div class="form-group">
             <p><label for="inputImage">Image</label></p>
             <%= f.attachment_field :profile_image, placeholder: "Profile image" %>
          </div>
          <div class="form-group">
              <label for="introduction">Introduction</label>
              <textarea class="form-control introduction" name="user[introduction]" id="introduction"></textarea>
          </div>
          <div class="form-group">
              <input type="submit" name="commit" value="Update User" class="btn btn-secondary" data-disable-with="Update User">
          </div>
          <%= link_to user_path(@user.id) do %>Show
          <a>|</a>
          <a href="/users">Back</a>
         <% end %>
         <% end %>
     </div>
 </div>
</main>
<footer>
     <div class="container mt-5">
