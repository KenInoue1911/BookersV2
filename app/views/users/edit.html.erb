
<% if @user.errors.any? %>
   <h3><%= @user.errors.count %> errors prohibited this object from being saved</h3>
   <p><% @user.errors.full_messages.each do |message| %></p>
   <%= message %>
   <% end %>
<% end %>
<main>
 <div class="container">
     <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
         <h2>User Info</h2>
         <%= form_with model:@user, local:true do |f| %>
          <div class="form-group">
             <p><label for="inputName">Name</label></p>
             <%= f.text_field :name %>
          </div>
          <div class="form-group">
             <p><label for="inputImage">Image</label></p>
             <%= f.attachment_field :profile_image, placeholder: "Profile image" %>
          </div>
          <div class="form-group">
              <p><label for="introduction">Introduction</label></p>
              <%= f.text_area :introduction %>
          </div>
          <div class="form-group">
              <%= f.submit 'Update User' %>
          </div>
          <%= link_to user_path(@user.id) do %>Show
          <a>|</a>
          <a href="/users">Back</a>
         <% end %>
         <% end %>
     </div>
 </div>
</main>
