<% provide(:title, 'All users') %>
<h1>Users</h1>
<ul class="users">
  <table>
    <thead>
      <tr>
       <th>Image</th>
       <th>Name</th>
     </tr>
    </thead>

    <tbody>
    <tr>
     <td>
       <% @users.each do |user| %>
     </td>
     <td>
       <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
     </td>
     <td>
       <%= user.name %>
      </td>
     <td>
       <p><%= link_to 'Show', user_path(user.id)%></p>
     </td>
     <% end %>
    </tr>
  </tbody>
</table>

</ul>