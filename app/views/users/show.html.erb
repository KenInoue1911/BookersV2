<% if flash[:notice] %>
     <p id="notice">
       <%= flash[:notice] %>
     </p>
   <% end %>
   <main>
  <div class="container px-5 pxsm-0">
   <div class="row">
     <div class="col-md-3">
       <h2>User Info</h2>
       <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
       <table class="table">
         <tbody>
           <tr></tr>
           <tr>
             <th>
               Name  :<%= @user.name %>
             </th>
           </tr>
           <tr>
             <th>
               Introduciton  :<%= @user.introduction %>
             </th>
           </tr>
         </tbody>
       </table>
       <div class="row">
        <% if @user.id == current_user.id %>
        <%= link_to "Edit Profile", edit_user_path(@user), class:"btn btn-outline-secondary btn-block fas fa-user-cog" %>
         <% end %>
       </div>
       <h2 class="mt-3">New book</h2>
       <h4>Title</h4>
       <%= form_with model: @book, local:true do |f| %>
       <%= f.text_field :title, placeholder:"Enter Title" %>
       <h4>Opinion</h4>
       <%= f.text_area :body, placeholder:"Enter Opinion" %>
       <%= f.submit 'Create Book' %>
       <% end %>
      </div>
      <div class="col-md-8 offset-md-1">
       <h2>Books</h2>
       <table class="table table-hover table-inverse">
        <thead>
         <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
         </tr>
        </thead>
        <tbody>
         <% @books.each do |book| %>
         <tr>
          <td><%= link_to user_path(@user) do %><%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %><% end %></td>
          <td><%= link_to book_path(book.id) do %><%= book.title %><% end %></td>
          <td><%= book.body %></td>
          <% end %>
         </tr>
        </tbody>
       </table>
      </div>
     </div>
    </div>
   </div>
  </main>
<footer>
     <div class="container mt-5">
      <div class="row">
       <div class="mx-auto">
        <p>CopyRight KenInoue.inc</p>
       </div>
      </div>
     </div>
</footer>