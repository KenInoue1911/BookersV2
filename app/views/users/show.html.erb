<h1>Books</h1>
 <body>
  <table>
   <thead>
    <tr>
     <th><p></p></th>
     <th><p>Title</p></th>
     <th><p>Opinion</p></th>
    </tr>
   </thead>
   <tbody>
   <% @books.each do |book| %>
   <tr>
    <td><p><%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></p></td>
    <td><p><%= link_to book_path(book.id) do %></p>
        <%= book.title %>
        <% end %>
    </td>
    <td><p><%= book.body %></p>
        <% end %>
    </td>
    </tr>
   </tbody>
   </table>
 </body>
 <h1>User Info</h1>
 <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
  <p>Name:<%= @user.name %></p>
  <p></p>
  <p>Introduciton:<%= @user.introduction %></p>
 <% if @user.id == current_user.id %>
  <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
 <% end %>
 <h1>New book</h1>
 <%= form_with model: @book, local:true do |f| %>
  <h4>Title</h4>
 <%= f.text_field :title %>
  <h4>Opinion</h4>
 <%= f.text_area :body %>
 <p><%= f.submit 'Create book' %></p>
<% end %>
<%= paginate @books %>
